{% extends 'base.html.twig' %}
{% block title %}Acteur #{{ actor.id }}{% endblock %}

{% block body %}

    <div>
    <h2>{{ actor.name}}</h2>
        <div class="media">
            <img class="align-self-start mr-3" src="/uploads/{{actor.picture}}" alt="{{ actor.name }} picture">
            <div class="media-body">
    <div>
        <strong>Liste des séries :</strong>
        <ul>
            {% for program in actor.programs %}
                <li>

                <a href="{{ path("program_show", { slug: program.slug }) }}">{{ program.title }}</a>
                </li>
            {% else %}
                <li>Aucune série pour cet acteur</li>
            {% endfor %}
        </ul>
    </div>
<a href="{{ path('actor_index') }}">
        Retour à liste des acteurs



{% endblock %}
