{% extends 'base.html.twig' %}

{% block title %}Season index{% endblock %}



{% block body %}
    <a href="{{ path("season_new") }}">{{ 'Add'|trans }}</a>
    <h1>Season index</h1>

    <table class="table">
        <thead class = "seasontext">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Number</th>
                <th>Year</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody class = "seasontext">
        {% for season in seasons %}
            <tr>
                <td>{{ season.id }}</td>
                <td>{{ season.program.title }}</td>
                <td>{{ season.number }}</td>
                <td>{{ season.year }}</td>
                <td>{{ season.description }}</td>
                <td>
                    <a href="{{ path('season_show', {'id': season.id}) }}">{{ 'Detail'|trans }}</a>
                    <a href="{{ path('season_edit', {'id': season.id}) }}">{{ 'Edit'|trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('season_new') }}">{{ 'Add'|trans }}/a>
{% endblock %}
